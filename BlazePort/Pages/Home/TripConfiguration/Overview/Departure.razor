<section class="trip-configuration-item dept">
    <div>
        <h2 class="title">
            Departing from
        </h2>
        <p class="text">
            <span class="primary">
                @TripConfiguration.DepartureLocation?.Name
            </span>
            <span class="meta">
                @TripConfiguration.DeparturePort?.Name
            </span>
        </p>
    </div>
    <div>
        <h2 class="title">
            Arriving to
        </h2>
        <p class="text">
            <span class="primary">
                @TripConfiguration.ArrivalLocation?.Name
            </span>
            <span class="meta">
                @TripConfiguration.ArrivalPort?.Name
            </span>
        </p>
    </div>
    <div class="from">
        <Planet Name="@TripConfiguration.DepartureLocation?.Name" />
    </div>
    <Planet Name="@TripConfiguration.ArrivalLocation?.Name" />
</section>

@code {
    bool IsMedium { get; set; }

    [Parameter] public TripConfigurationModel TripConfiguration { get; set; }
} 