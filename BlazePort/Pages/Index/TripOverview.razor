<div class="card-columns">
    <div class="card trip-configuration">
        <div class="card-body">
            <h4 class="card-title">
                Departing from
            </h4>
            <p class="card-text">
                <span class="primary">
                    @TripConfiguration.DepartureLocation?.Name
                </span>
                <span class="meta">
                    @TripConfiguration.DeparturePort?.Name
                </span>
            </p>
        </div>
    </div>
    <div class="card trip-configuration">
        <div class="card-body">
            <h4 class="card-title">
                Arriving to
            </h4>
            <p class="card-text">
                <span class="primary">
                    @TripConfiguration.ArrivalLocation?.Name
                </span>
                <span class="meta">
                    @TripConfiguration.ArrivalPort?.Name
                </span>
            </p>
        </div>
    </div>
    <div class="card trip-configuration">
        <div class="card-body">
            <h4 class="card-title">
                Next trip will launch in t-minus
            </h4>
            <p class="card-text">
                <Countdown CountdownTo="@TripConfiguration.TripStart" />
                <span class="meta">On @TripConfiguration.TripStart.ToShortDateString()</span>
            </p>
        </div>
    </div>
    <div class="card trip-configuration">
        <div class="card-body">
            <h4 class="card-title">
                Estimated price
            </h4>
            <p class="card-text">
                <span class="primary">@TotalPrice.ToString("C0")</span>
                <span class="meta">Per Passenger</span>
                <PassengerCount Count="TripConfiguration.PassengerCount" />
            </p>
        </div>
    </div>
    <div class="card trip-configuration">
        <div class="card-body">
            <h4 class="card-title">
                Your trip will take
            </h4>
            <p class="card-text">
                <TripTime TripDistance="TripConfiguration.TripDistance" />
                <span class="meta">@TripConfiguration.FormattedMiles</span>
            </p>
        </div>
    </div>
    <div class="card trip-configuration">
        <div class="card-body">
            <h4 class="card-title">
                Book your trip
            </h4>
            <p class="card-text">
                @ButtonTemplate
            </p>
        </div>
    </div>
</div>

@code {
    [Parameter] public TripConfigurationModel TripConfiguration { get; set; }

    [Parameter] public RenderFragment ButtonTemplate { get; set; }

    [Parameter] public float TotalPrice { get; set; }
}