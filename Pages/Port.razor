@layout CenteredContentLayout
@page "/port/{Id:int}"
@using GenFu;

@using Data;

<h3>@port.Name</h3>
<img src="@port.ImageUrl" />
<p>@port.Description</p>
<ol>
    <li>@port.Country</li>
    <li>@port.Lat, @port.Long</li>
</ol>
@code {

    [Parameter] int Id { get; set; }

    PortDetails port;

    protected override void OnInit()
    {
        A.Configure<PortDetails>()
            .Fill(ld => ld.Description)
            .AsLoremIpsumWords(50)
            .Fill(ld => ld.ImageUrl, () => "http://placehold.it/600x150");
        port = A.New<PortDetails>();
    }

}
